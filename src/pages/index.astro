---
import Layout from '../layouts/Layout.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import Generator from '../components/Generator'
import BackTop from '../components/BackTop.astro'
import '../message.css'
import 'katex/dist/katex.min.css'
import 'highlight.js/styles/atom-one-dark.css';
---

<Layout title="Chat For Free">
  <main class="flex flex-col justify-between min-h-screen lg:max-w-80ch xl:max-w-90ch transition bg-$c-bg shadow-2xl shadow-black/10 dark:shadow-black/15">
    <Header />
    <Generator client:load />
    <Footer />
    <BackTop />
  </main>
</Layout>

