---
import Logo from './Logo.astro'
import Themetoggle from './Themetoggle.astro';
---

<header>
  <div class="fb items-center flex-row mt-6rem">
    <div class="fi">
      <a href="." onclick="return false" mr-1 select-none transition-all flex gap-2>
        <Logo />
        <span class="gpt-subtitle dark:filter-sepia ml-1">Free</span>
        <span class="gpt-title dark:gpt-subtitle dark:filter-invert">Chat</span>
      </a>
    </div>
    <div class="flex">
      <a class="grid place-items-center w-10 h-10 rounded-md transition-background-color hover:bg-$c-fg-5" href="https://github.com/88lin/free-chat">
        <span class="i-line-md-github-twotone text-lg"></span>
      </a>
      <Themetoggle />
    </div>
  </div>
</header>
